{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Event",
    "type": "object",
    "required": [
      "name",
      "starts_at",
      "timezone",
      "region",
      "city",
      "district",
      "categories",
      "tags",
      "age_range",
      "desc",
      "map_link",
      "address_en",
      "id",
      "address_query",
      "source",
      "language"
    ],
    "properties": {
      "name": { "type": "string", "minLength": 1 },
      "starts_at": { "type": "string", "format": "date-time" },
      "ends_at": { "type": ["string","null"], "format": "date-time" },
      "timezone": { "type": "string", "minLength": 1 },
  
      "region": { "type": "string" },
      "city": { "type": "string" },
      "district": { "type": "string" },
      "venue_name": { "type": ["string","null"] },
  
      "indoor_outdoor": { "type": "string", "enum": ["Indoor","Outdoor","Mixed"] },
      "categories": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
      "tags": { "type": "array", "items": { "type": "string" } },
  
      "cost_range": { "type": ["string","null"] },
      "price_text": { "type": ["string","null"] },
      "age_range": { "type": "array", "items": { "type": "integer", "minimum": 0 }, "minItems": 2, "maxItems": 2 },
  
      "desc": { "type": "string", "minLength": 5 },
      "website": { "type": ["string","null"], "format": "uri" },
      "tickets_url": { "type": ["string","null"], "format": "uri" },
  
      "map_link": { "type": "string", "format": "uri" },
      "drive_min": { "type": ["integer","null"], "minimum": 0 },
      "address_en": { "type": "string" },
      "address_query": { "type": "string" },
      "lat": { "type": ["number","null"] },
      "lng": { "type": ["number","null"] },
  
      "images": { "type": "array", "items": { "type": "string", "format": "uri" } },
      "image_url": { "type": ["string","null"], "format": "uri", "description": "Primary/source image (usually images[0])." },
      "thumbnail_url": { "type": ["string","null"], "format": "uri", "description": "Public thumbnail URL (1200Ã—630 cover crop via image proxy)." },
  
      "language": { "type": "string", "enum": ["en"] },
      "status": { "type": "string", "enum": ["scheduled","postponed","cancelled","ended"] },
  
      "source": {
        "type": "object",
        "required": ["name","url"],
        "properties": {
          "name": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        },
        "additionalProperties": false
      },
  
      "id": {
        "type": "string",
        "pattern": "^([a-f0-9]{16}|[a-z0-9-]+)$"
      },
  
      "external_ids": {
        "type": "object",
        "additionalProperties": { "type": "string" }
      }
    },
    "additionalProperties": false
  }
  